{
	
	"_version": "1.7.0",
	"sap.app": {
		"id": "FabFinV3",
		"type": "application",
		"i18n": "i18n/i18n.properties",
		"applicationVersion": {
			"version": "1.0.0"
		},
		"title": "{{appTitle}}",
		"description": "{{appDescription}}",
		"sourceTemplate": {
			"id": "ui5template.basicSAPUI5ApplicationProject",
			"version": "1.40.12"
		}
	},

	"sap.ui": {
		"technology": "UI5",
		"icons": {
			"icon": "",
			"favIcon": "",
			"phone": "",
			"phone@2": "",
			"tablet": "",
			"tablet@2": ""
		},
		"deviceTypes": {
			"desktop": true,
			"tablet": true,
			"phone": true
		},
		"supportedThemes": [
			"sap_hcb",
			"sap_belize"

		]
	},

	"sap.ui5": {
	 "rootView": {
            "viewName": "FabFinV3.v.App",
            "type": "XML",
            "async": true
        },
		"dependencies": {
			"minUI5Version": "1.42.0",
			"libs": {
				"sap.ui.core": {},
				"sap.m": {},
				"sap.ui.layout": {},
				"sap.ushell": {},
				"sap.collaboration": {},
				"sap.ui.comp": {},
				"sap.uxap": {}
			}
		},
		"contentDensities": {
			"compact": true,
			"cozy": false
		},
		"models": {
			"i18n": {
				"type": "sap.ui.model.resource.ResourceModel",
				"settings": {
					"bundleName": "FabFinV3.i18n.i18n"
				}
			}
		},
        "routing": {
            "config": {
                "routerClass": "sap.m.routing.Router",
                "viewType": "XML",
                "viewPath": "FabFinV3.v",
                "controlId": "app",
                "controlAggregation": "pages",
                "bypassed": {
                    "target": [
                        "notFound"
                    ]
                },
                "async": true
            },
            "routes": [{
                    "pattern": "",
                    "name": "login",
                    "target": [
                        "login"
                    ]
                },
                {
                    "pattern": "home",
                    "name": "home",
                    "target": [
                        "home"
                    ]
                },
                {
                    "pattern": "cust/{custId}",
                    "name": "customer",
                    "target": [
                        "customer"
                    ]
                }
            ],
            "targets": {
            	"login": {
                    "viewName": "Login",
                    "viewId": "login",
                    "viewLevel": 1
                },
                "home": {
                    "viewName": "View1",
                    "viewId": "home",
                    "viewLevel": 2
                },
                "customer": {
                    "viewName": "View2",
                    "viewId": "cust",
                    "viewLevel": 3
                }
            }
        },
		"resources": {
			"css": [{
				"uri": "style.css"
			}]
		}
	}
}
